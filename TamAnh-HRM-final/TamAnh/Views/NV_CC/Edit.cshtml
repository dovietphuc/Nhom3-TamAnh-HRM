@model TamAnh.Models.tblchungchi

@{
    ViewBag.Title = "Sửa chứng chỉ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-group {
        overflow: hidden;
    }
</style>

<br />
<div class="panel panel-primary">
    <div class="panel-heading"><strong>Sửa chứng chỉ</strong></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PK_ChungChi_iMaCC)

            <div class="form-group">
                <label class="control-label col-md-2"> Tên chứng chỉ </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ChungChi_sTenChungChi, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.ChungChi_sTenChungChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Ngày bắt đầu </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ChungChi_dNgayBD, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ChungChi_dNgayBD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Ngày kết thúc </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ChungChi_dNgayKT, new { htmlAttributes = new {@type= "datetime-local", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ChungChi_dNgayKT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Tệp đính kèm </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ChungChi_sTepDinhKem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ChungChi_sTepDinhKem, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Nhân viên </label>
                <div class="col-md-10">
                    @Html.DropDownList("FK_NhanVien_iIDNhanVien", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FK_NhanVien_iIDNhanVien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu lại" class="btn btn-default" />
                </div>
            </div>
        }

        <div>
            <a href="@Url.Action("Index", "NV_CC")" class="btn btn-sm btn-primary"> Quay lại</a>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
